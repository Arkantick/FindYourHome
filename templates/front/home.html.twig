
{% extends 'front/layout.html.twig' %}

{% block title 'Find Your Home' %}


{% block body %}

    <div class="container mt-5 pl-5 pr-5">
        <div class="row flex">
            {% for accomodation in accomodations %}
                <div class="col-3">
                    <div class="card"
                         style="
                            width: 20rem;
                            max-height: 30rem;
                            overflow: hidden;
                            -webkit-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            -moz-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            text-align: justify;
                         "
                    >
                        <img class="card-img-top" src="{{ asset('images/test.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h2 style="font-size: 1rem">{{ accomodation.name }}</h2>
                            <p class="card-text" style="max-height: 7.5rem; overflow: hidden">
                                {{ accomodation.description }}
                            </p>
                            <button class="btn btn-primary">Explore</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}