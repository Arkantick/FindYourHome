
{% extends 'front/layout.html.twig' %}

{% block title 'Find Your Home' %}


{% block body %}

    <div class="container mt-5 pl-5 pr-5">
        <div class="row flex">
            {% for data in datas %}
                <div class="col-3">
                    <div class="card"
                         style="
                            width: 20rem;
                            max-height: 30rem;
                            overflow: hidden;
                            -webkit-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            -moz-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            text-align: justify;
                         "
                    >
                        <img
                            class="card-img-top"
                            src="{{ asset('images/default/accomodation.jpg') }}"
                            alt="Card image cap"
                        >
                        <div class="card-body">
                            <h2 style="font-size: 1rem">{{ data['accomodation'].name }}</h2>
                            <p class="card-text" style="max-height: 7.5rem; overflow: hidden">
                                {{ data['accomodation'].description }}
                            </p>
                            <div class="row-fluid">
                                <a class="btn btn-primary" href="{{ path('front_view', {id: data['accomodation'].id, name: data['accomodation'].name }) }}">Explore</a>
                                <div class="marks float-right">
                                    {% for i in range(1, 5) %}
                                        {% if i <= data['mark'] %}
                                            <i class="fas fa-star text-primary"></i>
                                        {% else %}
                                            <i class="far fa-star text-primary"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}