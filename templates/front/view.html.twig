
{% extends 'front/layout.html.twig' %}

{% block title 'Find Your Home' %}


{% block body %}
    <div class="container-fluid mt-5">
        <div class="row-fluid">
            <div class="col-md-7">

                <h2>{{ accomodation.name }}</h2>
                <div class="col-md-12">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel"
                        style="
                            -webkit-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            -moz-box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);
                            box-shadow: 0px 0px 13px 2px rgba(0,0,0,0.75);">
                        <div class="carousel-inner">
                            <div class="row">
                                <div class="col-md-7" style="background: red">
                                    {% for photo in photos %}
                                        <div class="{% if photos[0].id == photo.id %}active {% endif %} carousel-item">
                                            <img class="d-block w-100" src="{{ asset('images/accomodation/' ~ photo.url) }}">
                                        </div>
                                    {% endfor %}
                                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <div class="col-md-5" style="background: yellow">

                                </div>
                            </div>




                        </div>
                    </div>
                </div>


                {{ type.name }} <i class="fas fa-{{ type.icon }}"></i>

                {% for photo in photos %}
                    <!--<img src="{{ asset('images/accomodation/' ~ photo.url) }}" alt="">-->
                {% endfor %}
                <!--{{ dump(accomodation) }}
                {{ dump(type) }}
                {{ dump(location) }}
                {{ dump(equipments) }}
                {{ dump(availabilities) }}
                {{ dump(photos) }}

                {{ location.country }}-->
            </div>
            <div class="col-5"></div>
        </div>
    </div>

{% endblock %}