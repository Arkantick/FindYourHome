{% extends "front/layout.html.twig" %}
{% block body %}
<div class="container">
    <div class="mt-5">
        <div class="row">
            <div class="form-group col-6">
                {{ form_label(registrationForm.username, 'Username :') }}
                {{ form_widget(registrationForm.username ) }}
            </div>
           <div class="form-group col-6">
               {{ form_label(registrationForm.password, 'Password :') }}
               {{ form_widget(registrationForm.password) }}
           </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                {{ form_label(registrationForm.firstname, 'Firstname :') }}
                {{ form_widget(registrationForm.firstname) }}
            </div>
            <div class="form-group col-6">
                {{ form_label(registrationForm.lastname, 'Lastname :') }}
                {{ form_widget(registrationForm.lastname) }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                {{ form_label(registrationForm.mail, 'Mail :') }}
                {{ form_widget(registrationForm.mail) }}
            </div>
            <div class="form-group col-6">
                {{ form_label(registrationForm.phone_fixed, 'Phone fixed :') }}
                {{ form_widget(registrationForm.phone_fixed) }}
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                {{ form_label(registrationForm.phone_mobile, 'Mobile phone :') }}
                {{ form_widget(registrationForm.phone_mobile) }}
            </div>
            <div class="form-group col-6">
                {{ form_label(registrationForm.about, 'About you :') }}
                {{ form_widget(registrationForm.about) }}
            </div>
        </div>

        <div class="form-group">
            <button class="btn">Register</button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
